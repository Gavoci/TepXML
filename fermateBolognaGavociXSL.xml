<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

<xsl:template match="/">
  <html>
    <head>
      <title>Fermate dei mezzi di trasporto</title>
    </head>
    <body>
      <h1>Fermate dei mezzi di trasporto</h1>
      <ul>
        <xsl:for-each select="fermate/fermata">
          <li>
            <xsl:value-of select="denominazione"/>
            <ul>
              <li>ID: <xsl:value-of select="@id"/></li>
              <li>Ubicazione: <xsl:value-of select="ubicazione"/></li>
              <li>Indirizzo: <xsl:value-of select="indirizzo"/></li>
              <li>Numero Civico: <xsl:value-of select="numero_civico"/></li>
              <li>Telefono: <xsl:value-of select="telefono__si_no_"/></li>
              <li>Numero Stalli: <xsl:value-of select="numero_stalli"/></li>
              <li>Codice Via: <xsl:value-of select="codice_via"/></li>
              <li>Civkey: <xsl:value-of select="civkey"/></li>
              <li>CoordX: <xsl:value-of select="coordinata_x"/></li>
              <li>CoordY: <xsl:value-of select="coordinata_y"/></li>
              <li>Longitudine: <xsl:value-of select="longitudine"/></li>
              <li>Latitudine: <xsl:value-of select="latitudine"/></li>
            </ul>
          </li>
        </xsl:for-each>
      </ul>
    </body>
  </html>
</xsl:template>

</xsl:stylesheet>
